{% extends 'base.twig' %}

{% block content %}

<div class="row">

  <div class="col-md-6 col-md-offset-3">

    <div class="panel panel-default">

      <div class="panel-heading">Novo usuário
        <span class="glyphicon glyphicon-user pull-right" aria-hidden="true"></span>
      </div>

      <div class="panel-body">

        <form action="{{ path_for('signup') }}" method="post">

          <div class="form-group">
            
            <label for="email">E-mail</label>

            <input type="email" name="email" id="email" placeholder="you@domain.com" class="form-control">

          </div>

          <div class="form-group">

            <label for="name">Name</label>

            <input type="text" name="name" id="name" class="form-control">

          </div>

          <div class="form-group">

            <label for="password">Password</label>

            <input type="password" name="password" id="password" class="form-control">

          </div>

          <button title="Registrar novo usuário" type="submit" class="btn btn-primary">Registrar</button>

        </form>

      </div>

    </div>

  </div>

</div>

{% endblock %}
