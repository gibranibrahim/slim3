{% extends 'base.twig' %}

{% block content %}

<div class="row">

  <div class="col-md-6 col-md-offset-3">

    <div class="panel panel-default">

      <div class="panel-heading">Novo usuário
        <span class="glyphicon glyphicon-user pull-right" aria-hidden="true"></span>
      </div>

      <div class="panel-body">

        <form action="{{ path_for('signup') }}" method="post">

          <div class="form-group{{ errors.email ? ' has-error' : '' }}">

            <label for="email">E-mail</label>

            <input type="email" name="email" id="email" placeholder="you@domain.com" class="form-control" value="{{ old.email }}">

            {% if errors.email %}

              <span class="help-block">{{ errors.email | first }}</span>

            {% endif %}

          </div>

          <div class="form-group{{ errors.name ? ' has-error' : '' }}">

            <label for="name">Nome</label>

            <input type="text" name="name" id="name" class="form-control" value="{{ old.name }}">

            {% if errors.name %}

              <span class="help-block">{{ errors.name | first }}</span>

            {% endif %}

          </div>

          <div class="form-group{{ errors.password ? ' has-error' : '' }}">

            <label for="password">Senha</label>

            <input type="password" name="password" id="password" class="form-control">

            {% if errors.password %}

              <span class="help-block">{{ errors.password | first }}</span>

            {% endif %}

          </div>

          <button title="Registrar novo usuário" type="submit" class="btn btn-success">Registrar</button>

          <a title="Cancelar" href="{{ path_for('visits.index') }}" class="btn btn-danger pull-right" role="button">Cancelar</a>

        </form>

      </div>

    </div>

  </div>

</div>

{% endblock %}
